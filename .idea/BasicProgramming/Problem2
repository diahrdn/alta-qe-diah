//ini pembahasan tentang Array

public class Array {
    public static void main(String[] args) {
        //Array adalah suatu tipe data yeng berisikan kumpulan data-data dengan tipe data yang sama.
        //jumlah data di Array tdk bisa diubah setelah pertama kali dibuat
        //awalan indeks Array selalu di angka 0
        // panjang array 7: indeksnya dari 0 sampai 6

        //Contoh PPT
        char[] alterra = {'a','l','t','t','e','r','r','a'};
        System.out.println(alterra[5]);


        System.out.println("\n"); //pembatas

        //Contoh lain mengisi array langsung
        String[] names= new String[]{"Santi", "Budi"};
        System.out.println(names[0]);
        System.out.println(names[1]);


        System.out.println("\n"); //pembatas

        //Contoh lain
        String[] names2 = new String[5];
        names2[0] = "Andi";
        names2[2] = "Budi";
        names2[4] = "Nana";
        for (int index = 0; index < names2.length; index++){
            System.out.println(index+" - "+names2[index]);
        }
    }
}
